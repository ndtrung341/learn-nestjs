{
   "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2021",
      "sourceMap": true,
      "outDir": "./dist",
      "incremental": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "strictBindCallApply": false,
      "noFallthroughCasesInSwitch": false,
      "baseUrl": "./src",
      "paths": {
         "@modules/*": ["modules/*"],
         "@common/*": ["common/*"],
         "@utils/*": ["utils/*"],
         "@config/*": ["config/*"],
         "@constants/*": ["constants/*"],
         "@shared/*": ["shared/*"]
      }
   }
}
